<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/seeall_btn_rowlayout"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:background="@color/nevi_blue"
        android:text="See All"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/White"
        android:layout_marginRight="20dp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/image_view_rowlayut_all_1"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:padding="40dp"
            android:src="@drawable/cake_shopbycategory"/>
        <TextView
            android:id="@+id/tv_rowlayutall_productname_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="product Name"
            android:layout_below="@id/image_view_rowlayut_all_1"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_rowlayoutall_productprice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rowlayutall_productname_1"
            android:text="500"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/image_view_rowlayut_all_2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="20dp"
                    android:src="@drawable/cake_shopbycategory" />
            <TextView
                android:id="@+id/tv_rowlayotall_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product Name"
                android:layout_below="@id/image_view_rowlayut_all_2"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rowlayotall_2"
                android:text="500"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_view_rowlayut_all_3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="20dp"
                android:src="@drawable/cake_shopbycategory" />

            <TextView
                android:id="@+id/tv_rowlayotall_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product Name"
                android:layout_below="@id/image_view_rowlayut_all_3"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rowlayotall_3"
                android:text="500"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>