<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".add_to_cart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:id="@+id/layout">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/add_to_cart_row_layout">
    </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@color/White"
        android:elevation="30dp"
        android:layout_alignBottom="@id/layout"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/rssymbol_black"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/Total_amount_Textview_addtocart_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="500"
            android:textColor="@color/Black"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/addtocart_screen_Done_tv_or_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Check Out"
            android:layout_margin="16dp"
            android:textColor="@color/White"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>